<% include ../partials/header.ejs %>


<h1>Books</h1>

<a href="books/add">Add a New Book</a>

<table class="table table-striped table-hover">
<thead>
	<tr>
		<th>Title</th><th>Author</th><th>Price</th><th>Year</th><th>Action</th>
	</tr>
</thead>
<tbody>
	<% books.forEach(function(book){ %>
	<tr>
		<td><%=book.title%></td>
		<td><%=book.author%></td>
		<td><%=book.price%></td>
		<td><%=book.year%></td>
		<td>
			<a href="/books/<%=book._id%>" class="btn btn-info">Edit</a>
			<a href="/books/delete/<%=book._id%>" class="btn btn-danger confirmation">Delete</a>
		</td>
	</tr>
	<% }); %>
</tbody>

</table>    

<% include ../partials/footer.ejs %>